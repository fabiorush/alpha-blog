<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class="col-xs-12">
    <%= form_for @article, :html => { class: "form-horizontal", role: "form" } do |f| %>
      <div class="form-group">
        <%= f.label :titulo, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Titulo do artigo", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :descrição, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Descrição do artigo" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text.capitalize } %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-5">
      [ <%= link_to "Cancel and Back to listing", articles_path %> ]
    </div>
  </div>
</div>